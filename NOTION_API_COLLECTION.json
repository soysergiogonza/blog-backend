    {
      "name": "Get Pages with Filter",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/notion/pages?filter=%7B%22property%22%3A%22Type%22%2C%22select%22%3A%7B%22equals%22%3A%22Article%22%7D%7D",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["notion", "pages"],
          "query": [
            {
              "key": "filter",
              "value": "{\"property\":\"Type\",\"select\":{\"equals\":\"Article\"}}",
              "description": "Filtro para obtener solo artículos"
            }
          ]
        },
        "description": "Obtener páginas con filtro específico"
      }
